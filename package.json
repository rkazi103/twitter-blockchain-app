    "lint": "eslint --fix 'src/{components,containers,pages,utils,constants,context,lib}/**/*.{js,jsx,ts,tsx}'",
    "lint:check": "eslint 'src/{components,containers,pages,utils,constants,context,lib}/**/*.{js,jsx,ts,tsx}'",
    "pre-commit": "yarn run format && git add -A .",
    "build": "next build",
    "start": "next start"
