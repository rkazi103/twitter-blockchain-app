{
  "name": "twitter-blockchain-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prepare": "husky install",
    "format": "prettier --write \"src/{components,containers,pages,styles,utils,lib,constants,context}/**/*.{js,jsx,ts,tsx,css,scss,json,yaml,md}\" && prettier --write \"studio/**/*.{js,jsx,json,md}\" && prettier --write \"smart_contract/**/*.{js,jsx,sol}\"",
